@model IEnumerable<parakeet.Models.OrderHistory>

@{
    ViewData["Title"] = "Order History";
}

<h1>Order History</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClothingType.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design.DesignName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClothingType.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design.DesignName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderHistoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderHistoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderHistoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
