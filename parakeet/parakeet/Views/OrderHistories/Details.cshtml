@model parakeet.Models.OrderHistory

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Order Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>
<div>

    <a  asp-action="Index"> <button style="color:darkorange" class="btn btn-outline-info btn-lg align-content-center"> Back To List </button> </a>
</div>

<h1>Order Items</h1>

<table class="table">
    <thead>
        <tr>
            
            <th>
                Design 
            </th>
            <th>
                Clothing Type
            </th>
            <th>
                Size
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderItemHistory) {
        <tr>


            <td>
                <img id="profilePicture" style="width:150px;height:160px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.Design.DesignArray))">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClothingType.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size.SizeName)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.ClothingType.price)
            </td>
        </tr>
}
    </tbody>
</table>