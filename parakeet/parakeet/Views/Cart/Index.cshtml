<h3>Cart Page</h3>
<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        
        
        <th>Name</th>
        <th>Photo</th>
        
        
    </tr>
    @foreach (CartItem item in ViewBag.cart)
    {
        <tr>
           
            <td>@item.clothingType.type</td>
            <td><img id="profilePicture" style="width:150px;height:160px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.design.DesignArray))"></td>
            
            
            
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Sum: @ViewBag.total</td>
        <td>
           
        </td>
    </tr>
</table>
<br>
<a asp-controller="Home" asp-action="index">Continue Shopping</a>
