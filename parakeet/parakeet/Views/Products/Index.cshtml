@model ProductsViewModel

<form asp-action="Index" method="get">
    <div class="container">
        <div class="text-center">
            <h4 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: darkorange" class="text-center">Filters Designs</h4>
            <a asp-action="Index"> Remove Filter </a>
            <p><br /></p>
        </div>
    </div>
    <table style="width: 100%; margin-bottom: 25px">
        <tr>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Nature" asp-action="Index">Nature</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Funny" asp-action="Index">Funny</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Abstract" asp-action="Index">Abstract</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Game" asp-action="index">Game</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Music" asp-action="index">Music</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Movie" asp-action="index">Movie</button>
            </td>
            <td>
                <button class="btn btn-outline-info" name="button" style="color:darkorange" value="Cool" asp-action="index">Cool</button>
            </td>
        </tr>
    </table>
</form>

<div> <p><br /></p></div>

<form asp-action="Index" method="post">
    <div class="jumbotron">
        <div class="container">
            <div class="text-center">
                <h4 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: darkorange" class="text-center">Start by Choosing a Clothing Type</h4>
            </div>
        </div>
        <div class="container">
            <div class="text-center">
                <div class="btn btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="ClothingTypes" type="radio" value="@Model.clothingTypes[0].type" autocomplete="off" style="color:darkorange">
                        Short Sleeve $20
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="ClothingTypes" type="radio" value="@Model.clothingTypes[1].type" autocomplete="off" style="color:darkorange">
                        Long Sleeve $35
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="ClothingTypes" type="radio" value="@Model.clothingTypes[2].type" autocomplete="off" style="color:darkorange">
                        Jacket $50
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="ClothingTypes" type="radio" value="@Model.clothingTypes[3].type" autocomplete="off" style="color:darkorange">
                        Hoodie $40
                    </label>
                </div>
            </div>

            <div> <p><br /></p></div>

            <div class="container">
                <div class="text-center">
                    <h4 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: darkorange" class="text-center">Select a Size Next</h4>
                </div>
            </div>

            <div class="text-center">
                <div class="btn btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[0].SizeName" autocomplete="off" style="color:darkorange">
                        X-Small
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[1].SizeName" autocomplete="off" style="color:darkorange">
                        Small
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[2].SizeName" autocomplete="off" style="color:darkorange">
                        Medium
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[3].SizeName" autocomplete="off" style="color:darkorange">
                        Large
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[4].SizeName" autocomplete="off" style="color:darkorange">
                        X-Large
                    </label>

                    <label class="btn btn-outline-info mr-5">
                        <input asp-for="Sizes" type="radio" value="@Model.sizes[5].SizeName" autocomplete="off" style="color:darkorange">
                        XX-Large
                    </label>
                </div>
            </div>
        </div>

        <div> <p><br /></p></div>

        <div class="container">
            <div class="text-center">
                <h4 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: darkorange" class="text-center">Then Pick a Design</h4>
            </div>
        </div>



        @if (Model.designs == null)
        {
            <h1 style=" font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="font-weight-bold  text-center">There are no designs to display</h1>
        }
        else
        {
            <div style="width: 100%; margin-bottom: 25px">
                <div class="btn-group-toggle text-center" data-toggle="buttons">
                    @for (int i = 0; i < Model.designs.Length; i++)
                    {
                        @if (i % 5 == 0 & i != 0)
                        {
                            <div> <p><br /></p></div>
                        }

                        <div class="btn btn-outline-info mr-3">
                            <input asp-for="Designs" type="radio" value="@Model.designs[i].DesignId" autocomplete="off" style="color:darkorange">
                            <img id="profilePicture" style="width:150px;height:160px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.designs[i].DesignArray))">
                            <p>@Model.designs[i].DesignName</p>
                        </div>
                    }
                </div>
            </div>
        }

        <div> <p><br /></p></div>

        <div class="form-group text-center">
            <input type="submit" value="Add to Cart" class="btn btn-primary btn-lg" style="color: darkorange" />
        </div>
    </div>
</form>